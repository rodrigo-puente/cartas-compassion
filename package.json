{
  "name": "cartas_compassion",
  "version": "0.1.14",
  "description": "Aplicación para generación de cartas dentro de Compassion",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Rodrigo Puente",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodrigo-puente/cartas-compassion.git"
  },
  "build": {
    "appId": "com.rodrigopuente.triciclo",
    "productName": "Cartas Compassion",
    "artifactName": "cartas-compassion-${version}-${os}-${arch}.${ext}",
    "copyright": "Copyright © 2021 ${author}",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "publish": [
        "github"
      ]
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "private": false,
        "releaseType": "release"
      }
    ]
  },
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.1.2",
    "bwip-js": "^3.0.4",
    "canvas": "^2.8.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "moment": "^2.29.1",
    "node-sass": "^6.0.1",
    "pdfkit": "^0.12.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "sqlite3": "^5.0.2",
    "web-vitals": "^1.0.1",
    "xlsx": "^0.17.3"
  },
  "scripts": {
    "react-start": "react-app-rewired start",
    "react-build": "react-app-rewired build",
    "react-test": "react-app-rewired test",
    "react-eject": "react-app-rewired eject",
    "electron": "wait-on tcp:3000 && electron .",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on tcp:3000 && electron .\"",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-builder -p never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "electron": "^15.1.0",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "electron-packager": "^15.4.0",
    "electron-reload": "^2.0.0-alpha.1",
    "react-app-rewired": "^2.1.8",
    "sass-loader": "^12.1.0",
    "wait-on": "^6.0.0"
  }
}
